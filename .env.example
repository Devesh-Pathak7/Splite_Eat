# Example environment configuration for SplitEat
# Copy this file to create your .env files

# ========================================
# BACKEND CONFIGURATION (/app/backend/.env)
# ========================================

# Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=spliteat_user
MYSQL_PASSWORD=your_secure_password_here
MYSQL_DATABASE=spliteat_db

# JWT Configuration
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Half Order Configuration
HALF_ORDER_EXPIRY_MINUTES=30

# CORS Configuration
CORS_ORIGINS=*

# ========================================
# FRONTEND CONFIGURATION (/app/frontend/.env)
# ========================================

# Backend URL (auto-configured by platform)
REACT_APP_BACKEND_URL=https://your-app.preview.emergentagent.com
WDS_SOCKET_PORT=443
REACT_APP_ENABLE_VISUAL_EDITS=false
ENABLE_HEALTH_CHECK=false